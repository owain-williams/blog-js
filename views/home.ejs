<%- include('partials/header') -%>

<h1>Home</h1>

<% for (let i = 0; i < posts.length; i++) { %>
    <% if (posts[i].title.length > titleLength) { %>
        <h2><%= posts[i].title.substring(0,titleLength) %>...</h2>
    <% } else { %>
        <h2><%= posts[i].title %></h2>
    <% } %>
    <% if (posts[i].body.length > bodyLength) { %>
        <p><%= posts[i].body.substring(0,bodyLength) %>...</p>
    <% } else { %>
        <p><%= posts[i].body %></p>
    <% } %>
    <a href="/posts/<%= posts[i].id %>">Read More</a>
<% } %>

<%- include('partials/footer') -%>