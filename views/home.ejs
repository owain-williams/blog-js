
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <!-- FOr each posts, display Title then Body (truncating body), then Read More link -->
    <%  posts.forEach(function(post){ %>
    <h3><%=post.title%></h3>
    <p>
    <%=post.body.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
    </p>


    <% }) %>


